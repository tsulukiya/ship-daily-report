<html>
<body>
<div>
    <form action="/logout" method="post">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        <input type="submit" value="Sign out">
    </form>
</div>
<div>
    <form method="post">
        <input type="date" name="dateShipDailyReport" placeholder="Date SDR"><br>
        <input type="text" name="positionGps" placeholder="Position"><br>
        <input type="text" step="0.1" name="presentSpeed" placeholder="Present Speed"><br>
        <input type="text" step="0.1" name="averageSpeed" placeholder="Average Speed"><br>
        <input type="number"  step="1" name="course" placeholder="Course"><br>
        <input type="text" name="vesselOperationMode" placeholder="Vessel Operation Mode"><br>
        <input type="text" name="engineOperationMode" placeholder="Engine Operation Mode"><br>
        <input type="number"  step="0.1" name="gasOilConsumptionPerDay" placeholder="GO Consumption Per day"><br>
        <input type="number"  step="0.1" name="lubricantOilConsumptionPerDay" placeholder="LO Consumption Per day"><br>
        <input type="number"  step="0.1" name="gasOilRemainOnBoard" placeholder="GO Remain On Board"><br>
        <input type="number"  step="0.1" name="lubricantOilRemainOnBoard" placeholder="LO Remain On Board"><br>
        <input type="text" name="remarks" placeholder="Remarks"><br>
        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        <br>
        <button type="submit">Add SDR</button>
    </form>

</div>
<div>List Ship's daily reports</div>

<form method="post" action="filter">
    <input type="date" name="filter">
    <button type="submit">Search</button>
    <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
</form>

{{#shipDailyReports}}
    <div>
        <b>{{dateShipDailyReport}}</b>
        <b>{{positionGps}}</b>
        <b>{{presentSpeed}}</b>
        <b>{{averageSpeed}}</b>
        <b>{{course}}</b>
        <b>{{vesselOperationMode}}</b>
        <b>{{engineOperationMode}}</b>
        <b>{{gasOilConsumptionPerDay}}</b>
        <b>{{lubricantOilConsumptionPerDay}}</b>
        <b>{{gasOilRemainOnBoard}}</b>
        <b>{{lubricantOilRemainOnBoard}}</b>
        <b>{{remarks}}</b>
    </div>
{{/shipDailyReports}}
</body>
</html>